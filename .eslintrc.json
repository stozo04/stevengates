{
  "parser": "@typescript-eslint/parser",  // Specify the TypeScript parser
  "extends": [
    "next/core-web-vitals",
    "plugin:@typescript-eslint/recommended"  // Add TypeScript ESLint rules
  ],
  "plugins": ["@typescript-eslint"],  // Add @typescript-eslint plugin
  "rules": {
    "no-console": "off",  // Disables "no-console" rule
    "@typescript-eslint/no-explicit-any": "off",  // Enable the rule for no-explicit-any
    "@typescript-eslint/no-unused-vars": "off"
  }
}
