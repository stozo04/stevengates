{
  "parser": "@typescript-eslint/parser",  // Specify the TypeScript parser
  "extends": [
    "next/core-web-vitals",
    "plugin:@typescript-eslint/recommended"  // Add TypeScript ESLint rules
  ],
  "plugins": ["@typescript-eslint"],  // Add @typescript-eslint plugin
  "rules": {
    "no-console": "off",  // Disables "no-console" rule
    "react-hooks/rules-of-hooks": "warn",  // Changes error to warning
    "next/next/no-img-element": "off",  // Disables the no-img-element rule
    "@typescript-eslint/no-explicit-any": "warn"  // Enable the rule for no-explicit-any
  }
}
